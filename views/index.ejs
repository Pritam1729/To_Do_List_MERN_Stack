<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%=listTitle%>
        </h1>
    </div>
    <div class="box">
        <ul>

            <%for(var i=0;i<newListItem.length;i++){%>
                <form action = "/delete" method = "post">
                    <div class="item">
                        <input type="checkbox"  value="<%=newListItem[i]._id%>" name = "checkbox" onChange = "this.form.submit()" ><p>
                            <%=newListItem[i].name%>
                        </p>
                    </div>
                    <input type="hidden" name = "listname" value="<%= listTitle%>">
                </form>
                <%}%>
        </ul>
    
    
    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder = "New Item" autocomplete="off" autofocus>
        <button type="submit"  name = "button" value=<%=listTitle%>>+</button>
    </form>
    </div>

